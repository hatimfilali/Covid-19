    class Livre
    {
        public int Id;
        public string Auteur;
        public string Name;
        public Livre(int id, string auteur, string name)
        {
            Id=id;
            Auteur=auteur;
            Name=name;
        }
        ~Livre()
        {
            Console.Writeline("destructor called")
        }
    }
    class Exemplaire
    {
